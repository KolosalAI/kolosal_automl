# Kolosal AutoML Environment Configuration Template
# Copy this file to .env and customize the values for your environment

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_ENV=development
API_DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================

# API Authentication
API_KEY_HEADER=X-API-Key
API_KEYS=your_api_key_1,your_api_key_2,your_api_key_3
REQUIRE_API_KEY=false

# Gradio Authentication
REQUIRE_GRADIO_AUTH=false
AUTH_USERS=admin:change_this_password,user:change_this_password

# Alternative: Single user credentials (for production)
ADMIN_PASSWORD=your_secure_admin_password_here
USER_PASSWORD=your_secure_user_password_here

# JWT Configuration
ENABLE_JWT_AUTH=false
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
JWT_EXPIRY_HOURS=24

# ============================================================================
# SECURITY LEVEL CONFIGURATION
# ============================================================================
# Options: development, testing, production
SECURITY_LEVEL=development

# ============================================================================
# SECURITY FEATURES
# ============================================================================

# Rate Limiting
ENABLE_RATE_LIMITING=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Input Validation
ENABLE_INPUT_VALIDATION=true
MAX_REQUEST_SIZE=104857600  # 100MB in bytes
MAX_JSON_DEPTH=10

# Security Headers
ENABLE_SECURITY_HEADERS=false
ENFORCE_HTTPS=false  # Set to true for production
ENABLE_HSTS=false    # Set to true for production with HTTPS

# Audit Logging
ENABLE_AUDIT_LOGGING=false

# ============================================================================
# ACCESS CONTROL
# ============================================================================

# IP Blocking (comma-separated)
BLOCKED_IPS=

# IP Whitelist (comma-separated, empty = allow all)
IP_WHITELIST=

# Advanced Security Features
ENABLE_HONEYPOT=false
ENABLE_BOT_DETECTION=false
ENABLE_GEO_BLOCKING=false

# ============================================================================
# DEVICE OPTIMIZER CONFIGURATION
# ============================================================================
MODEL_DIR=./models
JOB_TTL_SECONDS=3600

# ============================================================================
# INFERENCE ENGINE CONFIGURATION
# ============================================================================
ENGINE_ENABLE_BATCHING=1
ENGINE_MAX_BATCH_SIZE=64
ENGINE_BATCH_TIMEOUT=0.01
ENGINE_MAX_CONCURRENT_REQUESTS=100
ENGINE_ENABLE_CACHE=1
ENGINE_MAX_CACHE_ENTRIES=1000
ENGINE_CACHE_TTL_SECONDS=3600
ENGINE_ENABLE_QUANTIZATION=0
ENGINE_NUM_THREADS=4
ENGINE_ENABLE_THROTTLING=0

# Optional: Auto-load model on startup
DEFAULT_MODEL_PATH=
DEFAULT_MODEL_TYPE=
DEFAULT_COMPILE_MODEL=0

# ============================================================================
# DEVELOPMENT SETTINGS (Default)
# ============================================================================
# These are safe defaults for development

DEBUG_MODE=true
SECURITY_DEBUG=false

# ============================================================================
# PRODUCTION SECURITY SETTINGS
# ============================================================================
# Uncomment and configure for production deployment

# SECURITY_LEVEL=production
# REQUIRE_GRADIO_AUTH=true
# REQUIRE_API_KEY=true
# ENFORCE_HTTPS=true
# ENABLE_HSTS=true
# ENABLE_AUDIT_LOGGING=true
# ENABLE_RATE_LIMITING=true
# RATE_LIMIT_REQUESTS=50
# RATE_LIMIT_WINDOW=60
# AUTH_USERS=admin:very_secure_password_with_special_chars_123!

# ============================================================================
# TEMPLATE NOTES
# ============================================================================
# 1. Copy this file to .env before use
# 2. Replace all placeholder values with your actual configuration
# 3. Change all default passwords before production use
# 4. Use strong passwords with minimum 12 characters
# 5. Include uppercase, lowercase, numbers, and special characters
# 6. Rotate API keys and passwords regularly
# 7. Enable HTTPS and HSTS in production
# 8. Monitor audit logs regularly
# 9. Keep security configurations updated
# 10. For development: Most security features are disabled by default
# 11. For production: Uncomment and configure the production settings section